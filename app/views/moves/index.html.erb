<main class="container">
  <h1>Moves List</h1>
  <div class="actions">
    <%= link_to 'New Move', new_move_path, class: 'btn btn-primary' %>
  </div>

  <div class="moves-list" class='container'>
    <table class='table'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @moves.each do |move| %>
          <tr>
            <td><%= link_to move.name, move_path(move) %></td>
            <td><%= move.description %></td>
          </tr>
        <% end %>
    </table>
  </div>
</div>